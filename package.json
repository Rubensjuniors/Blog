{
  "name": "my-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start-local": "PORT=3009 next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint src --max-warnings=0",
    "prettier:check": "prettier --check .",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage --detectOpenHandles",
    "test:coverage:text": "yarn test --coverageReporters='text-summary'",
    "quality-check": "yarn run lint && yarn run type-check && yarn run prettier:check"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run quality-check && yarn run test",
      "post-merge": "npm install"
    }
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.5",
    "@swc/core": "^1.7.9",
    "@swc/jest": "^0.2.36",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwind-styled-components": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
